server {
    listen       80;
    server_name  localhost;

    # Serve React's build output
    root   /usr/share/nginx/html;
    index  index.html index.htm;

    # React Router: fallback all "deep" URLs to index.html
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Proxy API calls to your backend container
    location /api/ {
        proxy_pass         ${REACT_APP_API_URL}/api/;
        proxy_http_version 1.1;
        proxy_set_header   Upgrade $http_upgrade;
        proxy_set_header   Connection "upgrade";
        proxy_set_header   Host $host;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        
        # Add timeout settings for OAuth callbacks
        proxy_connect_timeout       10s;
        proxy_send_timeout          30s;
        proxy_read_timeout          30s;
        
        # Ensure no SSL verification for HTTP backend
        proxy_ssl_verify            off;
    }

    # Cache static assets aggressively
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg)$ {
        expires 1y;
        add_header Cache-Control "public";
    }
}